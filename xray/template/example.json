{
    "log": {
        "loglevel": "error",
        "access": "/tmp/xxxx_access.log",
        "error": "/tmp/xxxx_error.log"
    },
    "dns": {
        "servers": [
            "1.1.1.1",
            "8.8.8.8"
        ],
        "queryStrategy": "UseIPv4",
        "disableCache": true,
        "disableFallbackIfMatch": false
    },
    "inbounds": [
        {
            "listen": "0.0.0.0",
            "port": xxxx,
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "flow": "xtls-rprx-vision",
                        "level": 0,
                        "id": "f8ab4118-355e-4404-814e-b3229173fb29"
                    }
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "tcp",
                "security": "tls",
                "tlsSettings": {
                    "serverName": "domain.imrcrab.com",
                    "rejectUnknownSni": true,
                    "alpn": [
                        "h3"
                    ],
                    "cipherSuites": "TLS13-AES128-GCM-SHA256:TLS13-AES256-GCM-SHA384:TLS13-CHACHA20-POLY1305-SHA256:TLS13-AES128-CCM-SHA256",
                    "minVersion": "1.3",
                    "certificates": [
                        {
                            "certificateFile": "/root/domain.imrcrab.com/domain.imrcrab.com_bundle.pem",
                            "keyFile": "/root/domain.imrcrab.com/domain.imrcrab.com.key"
                        }
                    ]
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "settings": {
                "domainStrategy": "UseIPv4"
            },
            "tag": "direct"
        },
        {
            "tag": "blocked",
            "protocol": "blackhole"
        }
    ],
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "ip": [
                    "1.1.1.1",
                    "8.8.8.8"
                ],
                "domain": [
                    "ssl.gstatic.com"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "domain": [
                    "gstatic.com",
                    "googleapis.com"
                ],
                "outboundTag": "direct"
            },
            {
                "type": "field",
                "ip": [
                    "geoip:cn"
                ],
                "outboundTag": "blocked"
            },
            {
                "type": "field",
                "domain": [
                    "geosite:cn",
                    "geosite:tld-cn",
                    "geosite:category-ads-all",
                    "geosite:category-games@cn"
                ],
                "outboundTag": "blocked"
            }
        ]
    }
}
